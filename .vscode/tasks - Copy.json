{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "COBOL: Build active file",
      "type": "shell",
      "command": "mkdir -p bin && cobc -x -free -o bin/${fileBasenameNoExtension} ${file}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        {
          "owner": "cobc",
          "fileLocation": [
            "absolute"
          ],
          "pattern": {
            "regexp": "^(.*):(\\d+): (warning|error): (.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        }
      ]
    },
    {
      "label": "COBOL: Run active file (after build)",
      "type": "shell",
      "command": "bash -c 'bin/${fileBasenameNoExtension}'",
      "dependsOn": "COBOL: Build active file",
      "presentation": {
  	"echo": true,
  	"reveal": "always",
  	"panel": "shared",
  	"focus": true
	}
      }
    }
  ]
}